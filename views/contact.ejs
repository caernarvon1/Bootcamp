<main class="container mt-4">
    <h2>Contact Us</h2>
    <p>If you have any questions, feel free to reach out to us.</p>

    <!-- Form Pencarian -->
    <div class="mb-3">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by Name or Phone" oninput="searchContacts()">
    </div>

    <!-- Tombol untuk menampilkan/menyembunyikan form tambah kontak -->
    <button id="toggleContactButton" onclick="toggleAddContactForm()" class="btn btn-primary mb-3">Add Contact</button>
    
    <!-- Form tambah kontak yang disembunyikan secara default -->
    <div id="addContactForm" style="display: none; margin-bottom: 20px;">
        <form id="contactForm" onsubmit="return submitContactForm(event)">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="newName">Name:</label>
                        <input type="text" id="newName" name="name" class="form-control" required>
                        <div id="nameError" class="text-danger" style="display: none;">Name must contain only letters.</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="newPhone">Phone:</label>
                        <input type="text" id="newPhone" name="phone" class="form-control" required>
                        <div id="phoneError" class="text-danger" style="display: none;">Phone number is not valid.</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="newEmail">Email:</label>
                        <input type="email" id="newEmail" name="email" class="form-control">
                        <div id="emailError" class="text-danger" style="display: none;">Email is not valid.</div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
            <button type="button" class="btn btn-secondary" onclick="toggleAddContactForm()">Cancel</button>
        </form>
    </div>

    <!-- Daftar kontak -->
    <ul id="contactList" class="list-group">
        <% if (contacts && contacts.length > 0) { %>
            <% contacts.forEach((contact, index) => { %>
                <li class="list-group-item">
                    <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                        <div style="flex: 1; margin-right: 20px;">
                            <div><strong>Name:</strong> <span><%= contact.name %></span></div>
                            <div><strong>Phone:</strong> <span><%= contact.phone %></span></div>
                            <div id="details<%= index %>" style="display: none;">
                                <strong>Email:</strong> <span><%= contact.email || 'tidak tersedia' %></span>
                            </div>
                        </div>
                        <div style="flex-shrink: 0; display: flex; gap: 5px;">
                            <button onclick="toggleDetails('details<%= index %>')" class="btn btn-info btn-sm">Detail</button>
                            <button onclick="showUpdateForm(<%= index %>)" class="btn btn-warning btn-sm">Update</button>
                            <form action="/delete-contact" method="POST" style="display:inline;" onsubmit="return confirmDelete()">
                                <input type="hidden" name="index" value="<%= index %>">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                    <div id="updateForm<%= index %>" style="display: none; margin-top: 10px;">
                        <div style="display: flex; align-items: center;">
                            <form action="/update-contact" method="POST" style="flex: 1; margin-right: 20px;" onsubmit="return validateContactForm(event, 'name<%= index %>', 'phone<%= index %>', 'email<%= index %>')">
                                <input type="hidden" name="index" value="<%= index %>">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="name<%= index %>">Name:</label>
                                            <input type="text" id="name<%= index %>" name="name" class="form-control" value="<%= contact.name %>" required>
                                            <div id="nameError<%= index %>" class="text-danger" style="display: none;">Name must contain only letters.</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="phone<%= index %>">Phone:</label>
                                            <input type="text" id="phone<%= index %>" name="phone" class="form-control" value="<%= contact.phone %>" required>
                                            <div id="phoneError<%= index %>" class="text-danger" style="display: none;">Phone number is not valid.</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="email<%= index %>">Email:</label>
                                            <input type="email" id="email<%= index %>" name="email" class="form-control" value="<%= contact.email || '' %>">
                                            <div id="emailError<%= index %>" class="text-danger" style="display: none;">Email is not valid.</div>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success btn-sm">Save</button>
                                <button type="button" class="btn btn-secondary btn-sm" onclick="hideUpdateForm(<%= index %>)">Cancel</button>
                            </form>
                        </div>
                    </div>
                </li>
            <% }) %>
        <% } else { %>
            <li class="list-group-item">No contacts available.</li>
        <% } %>
    </ul>
</main>

<script>
    // Fungsi untuk menampilkan/membatalkan form tambah kontak
    function toggleAddContactForm() {
        var form = document.getElementById("addContactForm");
        var button = document.getElementById("toggleContactButton");

        if (form.style.display === "none" || form.style.display === "") {
            form.style.display = "block"; // Tampilkan form
            button.textContent = "Hide Add Contact"; // Ubah teks tombol menjadi "Hide Contact"
        } else {
            form.style.display = "none"; // Sembunyikan form
            button.textContent = "Add Contact"; // Kembalikan teks tombol menjadi "Add Contact"
        }
    }

    function confirmDelete() {
        return confirm("Are you sure you want to delete this contact?");
    }

    function toggleDetails(detailId) { // Fungsi untuk menampilkan/menyembunyikan detail kontak
        var details = document.getElementById(detailId);
        details.style.display = details.style.display === "none" || details.style.display === "" ? "block" : "none"; // Toggle detail
    }

    function showUpdateForm(index) { // Fungsi untuk menampilkan form update kontak
        var form = document.getElementById("updateForm" + index);
        form.style.display = form.style.display === "none" || form.style.display === "" ? "block" : "none"; // Toggle form update
    }

    function hideUpdateForm(index) { // Fungsi untuk menyembunyikan form update kontak
        var form = document.getElementById("updateForm" + index);
        form.style.display = "none"; // Sembunyikan form
    }

    function searchContacts() { // Fungsi untuk mencari kontak berdasarkan nama atau telepon
        const searchValue = document.getElementById("searchInput").value.toLowerCase();
        const contactList = document.getElementById("contactList");
        const contacts = contactList.getElementsByTagName("li");

        for (let i = 0; i < contacts.length; i++) {
            const name = contacts[i].getElementsByTagName("span")[0].innerText.toLowerCase(); // Ambil nama kontak
            const phone = contacts[i].getElementsByTagName("span")[1].innerText.toLowerCase(); // Ambil telepon kontak

            if (name.includes(searchValue) || phone.includes(searchValue)) {
                contacts[i].style.display = ""; // Tampilkan kontak jika cocok
            } else {
                contacts[i].style.display = "none"; // Sembunyikan kontak jika tidak cocok
            }
        }
    }

    async function submitContactForm(event) { // Fungsi untuk menangani pengiriman form tambah kontak
        event.preventDefault(); // Cegah reload halaman

        const formData = new FormData(document.getElementById('contactForm')); // Ambil data form
        const data = Object.fromEntries(formData); // Konversi ke format objek

        try {
            const response = await fetch('/add-contact', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            });

            const result = await response.json(); // Dapatkan hasil dari server

            if (response.ok) {
                alert("Contact added successfully!"); // Tampilkan pesan sukses
                location.reload(); // Reload halaman untuk menampilkan kontak baru
            } else {
                alert(result.message || "Failed to add contact."); // Tampilkan pesan kesalahan
            }
        } catch (error) {
            alert("Error: " + error.message); // Tampilkan pesan kesalahan jika terjadi
        }
    }
</script>
